<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="Math Exercise" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/rightId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="right" />

        <TextView
            android:id="@+id/wrongId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="wrong" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:backgroundTint="#9E5050"
        android:orientation="horizontal">

        <Button
            android:id="@+id/singleId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#efd5f0"
            android:text="Single" />

        <Button
            android:id="@+id/till20Id"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:text="Till20"
            android:backgroundTint="#efd5f0"/>

        <Button
            android:id="@+id/chalngeId"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:text="Chalnge"
            android:backgroundTint="#efd5f0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/num1Id"
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:background="#c7e0fc"
                android:gravity="center"
                android:text="Y"
                android:textColor="#ffffff"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:text="x"
                android:textSize="50dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/num2Id"
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:text="X"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="50sp"
                android:background="#c7e0fc"
                />

            <EditText
                android:id="@+id/answerId"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:ems="10"
                android:inputType="text"
                android:text="Answer"
                android:gravity="center"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/checkId"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#efd5f0"
                android:gravity="center"
                android:text="Check" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>